.PHONY: depend
depend: $(VICESRC)
	@( if test "@MKDEP@"; then                        \
	     echo building dependencies ... ;             \
             INCLUDES="$(INCLUDES) $(CFLAGS)";            \
	     SRCDIR=$(SRCDIR);                            \
	     export INCLUDES SRCDIR;                      \
	     CPP="$(CPP)"; export CPP;                    \
	     $(SHELL) $(SRCDIR)/mkdep $(VICEOBJS);        \
           else						  \
	     echo 'warning!  Cannot build dependencies!'; \
	   fi; )


