	(cd $(MSDOSODIR); $(RM) -f *~ *.bak TAGS *.o)
	(cd $(C64ODIR); $(RM) -f *~ *.bak TAGS *.o)
	(cd $(PETODIR); $(RM) -f *~ *.bak TAGS *.o)
	(cd $(VICODIR); $(RM) -f *~ *.bak TAGS *.o)
