#define mypia   pia2
#define MYPIA   PIA2

INCLUDES()
{
#include "parallel.h"
#include "drive.h"
#include "petpia.h"

#define my_set_int(a)                                                   \
        maincpu_set_irq(I_PIA1, (a)? IK_IRQ : IK_NONE)

#define my_restore_int(a)                                               \
        set_int_noclk(&maincpu_int_status, I_PIA1, (a) ? IK_IRQ : IK_NONE)

}

/* ------------------------------------------------------------------------- */

PIA_PRE_FUNCS()
{

#define PIA_SET_CA2(a)  do {                                            \
                            parallel_cpu_set_ndac((a)?0:1);             \
                        } while(0)

#define PIA_SET_CB2(a)  do {						\
			    parallel_cpu_set_dav((a)?0:1);		\
			} while(0)

}       /* end PIA_PRE_FUNCS */

PIA_RESET()
{
    parallel_cpu_set_bus(0xff);	/* all data lines high, because of input mode */
}

/* ------------------------------------------------------------------------- */

/*
E820	PORT A	    Input buffer for IEEE data lines
E821	CA2	    IEEE NDAC out
	CA1	    IEEE ATN in
E822	PORT B	    Output buffer for IEEE data lines
E823	CB2	    IEEE DAV out
	CB1	    IEEE SRQ in
*/

#define	STORE_PA()
#define	UNDUMP_PA()

STORE_PB()
{
    parallel_cpu_set_bus(byte^255);
}

UNDUMP_PB()
{
    parallel_cpu_set_bus(byte^255);
}

READ_PA()
{
	    if (drive[0].enable)
	        drive0_cpu_execute();
	    if (drive[1].enable)
	        drive1_cpu_execute();

	    if (parallel_debug)
		printf("read pia2 port A %x, parallel_bus=%x, gives %x\n",
			pia2.port_a, parallel_bus,
			(parallel_bus & ~pia2.ddr_a) |(pia2.port_a & pia2.ddr_a));

	    byte = (parallel_bus & ~pia2.ddr_a) | (pia2.port_a & pia2.ddr_a);
}

READ_PB()
{
	    byte = 0xff;
}


