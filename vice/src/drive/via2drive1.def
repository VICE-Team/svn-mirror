READ_PRA()
{
    {
        byte = ((drive_read_disk_byte(1) /* & ~via2d1[VIA_DDRA])
            | (via2d1[VIA_PRA] & via2d1[VIA_DDRA] */ ));
        if (drive[1].type == DRIVE_TYPE_1571)
            if (drive_byte_ready(1))
                drive_set_byte_ready(0, 1);
    }
}

